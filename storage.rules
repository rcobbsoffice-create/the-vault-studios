rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Beats Collection
    match /beats/{producerId}/{allPaths=**} {
      allow read: if true; // Marketplace previews are public
      allow write: if request.auth != null && request.auth.uid == producerId;
    }
    
    // Bounces Collection
    match /bounces/{artistId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == artistId || request.auth.token.email.matches('.*admin.*'));
      allow write: if request.auth != null && request.auth.token.email.matches('.*admin.*');
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
